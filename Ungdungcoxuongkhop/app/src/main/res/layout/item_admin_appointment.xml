<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvAppointmentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/btnEditAppointment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tvAppointmentInfo"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Cập nhật trạng thái"
            app:tint="@color/purple_500" />

        <ImageButton
            android:id="@+id/btnDeleteAppointment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tvAppointmentInfo"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Xoá lịch khám"
            app:tint="@android:color/holo_red_dark" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
