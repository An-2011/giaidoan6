<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/review_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 1"
            android:textColor="#888888"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/review_id_nguoi_dung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Người dùng: 2"
            android:textColor="#888888"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/review_ten_nguoi_dung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên người dùng"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/review_id_bac_si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Bác sĩ: 3"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/review_ten_bac_si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bác sĩ"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/review_diem_so"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm số: 5"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/review_nhan_xet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhận xét: Rất hài lòng"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/review_ngay_tao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày tạo: 2025-04-09"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <Button
            android:id="@+id/review_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xoá"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="12dp"
            android:minHeight="36dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
